<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SmartTrainApplication.MainWindow"
		xmlns:views="clr-namespace:SmartTrainApplication"
        Title="SmartTrainApplication">

	<DockPanel Background="Transparent">
		<views:TopBarView DockPanel.Dock="Top"/>
		<SplitView IsPaneOpen="True"
				   DisplayMode="Inline"
				   OpenPaneLength="251"
				   PaneBackground="Transparent">
			<SplitView.Pane>
				<views:SimulationView/>
			</SplitView.Pane>
			<DockPanel>
				<views:BottomBarView DockPanel.Dock="Bottom"/>
				<views:MapViewControl/>
			</DockPanel>
		</SplitView>
	</DockPanel>
</Window>
