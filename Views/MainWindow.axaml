<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SmartTrainApplication.MainWindow"
		xmlns:views="clr-namespace:SmartTrainApplication"
        Title="SmartTrainApplication">

	<DockPanel Background="Transparent">
		<views:BottomBarView DockPanel.Dock="Bottom"/>

		<TabControl DockPanel.Dock="Left"
					Background="#D9FCFCFC"
					BorderBrush="#11000000"
					Padding="0"
					Width="250">
			
			<TabItem Header="Track Editor">
				<ScrollViewer>
					<views:TrackEditorView/>
				</ScrollViewer>
			</TabItem>
			
			<TabItem Header="Train Editor">
				<ScrollViewer>
					<views:TrainEditorView/>
				</ScrollViewer>
			</TabItem>
			
			<TabItem Header="Simulation">
				<ScrollViewer>
					<views:SimulationView/>
				</ScrollViewer>
			</TabItem>
		</TabControl>
		
		<views:MapViewControl />

	</DockPanel>
</Window>
