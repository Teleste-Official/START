<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="260" d:DesignHeight="450"
             x:Class="SmartTrainApplication.TrackEditorView"
             xmlns:local="clr-namespace:SmartTrainApplication.Views;assembly=SmartTrainApplication"
             x:DataType="local:TrackEditorViewModel">

  <UserControl.Styles>
    <Style Selector="Button">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
      <Setter Property="Margin" Value="0 4" />
      <Setter Property="Background" Value="#0F6CBD" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="DockPanel.Dock" Value="Top" />
    </Style>

    <Style Selector="ComboBox">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="SelectedIndex" Value="0" />
      <Setter Property="MaxDropDownHeight" Value="200" />
      <Setter Property="DockPanel.Dock" Value="Top" />
      <Setter Property="Margin" Value="0 5 0 5" />
    </Style>
    <Style Selector="TextBox">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="DockPanel.Dock" Value="Top" />
      <Setter Property="Margin" Value="0 4" />
    </Style>
  </UserControl.Styles>

  <ScrollViewer DockPanel.Dock="Left"
                AllowAutoHide="False"
                Width="270">
    <Border DockPanel.Dock="Left"
            Width="250"
            Background="#D9FCFCFC"
            BorderBrush="#11000000"
            BorderThickness="1"
            BoxShadow="0 8 16 0 #22000000"
            Margin="0,0,10,0"
            Padding="4,0">


      <StackPanel Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Stretch">
        <!-- New horizontal container for button and ComboBox -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="5">
          <!-- Small square Add Line button -->
          <Button Command="{Binding AddLineButton}"
                  IsVisible="{Binding AddLineButtonEnabled}"
                  Width="35" Height="35"
                  Content="+"
                  FontSize="18"
                  FontWeight="500"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center" />
    
          <!-- ComboBox for Routes -->
          <ComboBox x:Name="RouteComboBox" ItemsSource="{Binding Routes}"
                    SelectionChanged="TrackComboBox_SelectionChanged"
                    IsVisible="{Binding RouteComboBoxEnabled}"
                    Width="180">
            <ComboBox.ItemTemplate>
              <DataTemplate>
                <StackPanel Orientation="Horizontal" Spacing="5">
                  <Image Height="25" Width="25" Source="/Assets/start_ui_icon_route.png" />
                  <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                </StackPanel>
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
        </StackPanel>
  
        <!-- TextBox below the horizontal container -->
        <TextBox Margin="0,10,0,5"
                 Watermark="Track Name..." 
                 Text="{Binding TrackName}"
                 IsVisible="{Binding TrackNameFieldEnabled}" />

        <Button Command="{Binding ModifyButton}"
                IsVisible="{Binding ModifyTrackButtonEnabled}">
          Modify Track
        </Button>
        <Button Command="{Binding AddTunnelButton}"
                IsVisible="{Binding AddTunnelButtonEnabled}">
          Add Tunnel
        </Button>
        <Button Command="{Binding AddStopButton}"
                IsVisible="{Binding AddStopButtonEnabled}">
          Add Stop
        </Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="5" >
          
          <Button Command="{Binding ConfirmButton}"
                  Width="107">
          Confirm
          </Button>
        
          <Button Command="{Binding CancelButton}"
                  Width="107">
          Cancel
          </Button>
        </StackPanel>

        <TextBlock>Action: </TextBlock>
        <TextBlock FontWeight="Bold" FontSize="20" Text="{Binding CurrentAction}" />

        <TextBlock Margin="0 10 0 0"
                   IsVisible="{Binding StopListEnabled}">Stops:</TextBlock>

        <Panel VerticalAlignment="Top" Margin="0 0 0 5"
               IsVisible="{Binding StopListEnabled}">
          <ScrollViewer>
            <ItemsControl x:Name="StopsPanel" ItemsSource="{Binding Stops}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <StackPanel Orientation="Vertical" Width="240" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Grid RowDefinitions="*,*" ColumnDefinitions="0,*">
                    <TextBox Width="150" Grid.Row="0" Grid.Column="1" GotFocus="StopGotFocus" LostFocus="StopLostFocus"
                             Name="{Binding Id}" Text="{Binding StopName}" />
                  </Grid>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </Panel>

      </StackPanel>

    </Border>
  </ScrollViewer>
</UserControl>